@model NhaCungCap

<h1>Thêm nhà cung cấp mới</h1>
<div class="container">
    <h3>Thêm thành viên</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
    <div class="form-group">
        <label for="Ten">Tên</label>
        <input type="text" class="form-control" asp-for="Ten" required />
         <span asp-validation-for="Ten" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DiaChi">Địa chỉ</label>
        <input type="text" class="form-control" asp-for="DiaChi" required />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SoDienThoai">Số điện thoại</label>
        <input type="text" class="form-control" asp-for="SoDienThoai" required />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>
    @* <div class="form-group">
        <label for="Image">Tải lên ảnh</label>
        <input type="file" name="file" class="form-control" />
    </div> *@
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}