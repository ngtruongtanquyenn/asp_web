
@{
    ViewData["Title"] = "Create";
}
@model TheLoai
<h1>Create</h1>
<div>
    <h3>Thêm Thể Loại</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
        <label asp-for="Name">Tên Thể Loại</label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
        <label asp-for="DateCreated">Ngày tạo</label>
        <input asp-for="DateCreated" type="date" class="form-control" />
        <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
    @* <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm mới</a> *@
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
