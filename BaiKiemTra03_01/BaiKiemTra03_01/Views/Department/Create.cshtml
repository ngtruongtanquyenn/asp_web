@model Department

<div class="container">
    <h3>Thêm phòng ban</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Tên phòng ban</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfEmployees" >Số lượng NV</label>
            <input asp-for="NumberOfEmployees" class="form-control" />
            <span asp-validation-for="NumberOfEmployees" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ManagerId" >Mã Quản Lý</label>
            <input asp-for="ManagerId" class="form-control" />
            <span asp-validation-for="ManagerId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>
