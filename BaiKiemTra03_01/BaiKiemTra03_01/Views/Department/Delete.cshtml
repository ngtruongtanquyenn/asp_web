@model Department

<h1>Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Number of Employees</dt>
        <dd class="col-sm-10">@Model.NumberOfEmployees</dd>

        <dt class="col-sm-2">Manager ID</dt>
        <dd class="col-sm-10">@Model.ManagerId</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Cancel</a>
</form>


