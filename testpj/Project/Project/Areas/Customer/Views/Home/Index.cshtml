@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
    @foreach(var item in Model)
    {
        <div class="card" style="width: 18rem;">
           
            <img src="@item.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-title">@item.price</h6>
                <p class="card-text">@item.Description</p>
                <div class="row">
                    <div class="col-6">
                        <a href="#" class="btn btn-primary">Thêm &#10084</a>
                    </div>
                    <div class="col-6">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Chi tiết SP</a>
                    </div>
                    <div class="col-6">
                        <a href="#" class="btn btn-danger">Mua hàng</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
